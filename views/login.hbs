<div class="container">

    <div class="row">
        <div class="col-md-7 m-auto bg-light">
            <div class="card">
                <div class="card-body">
                    <H5>Log into your account</H5>
                    <div id="login-info"></div>
                    <hr>
                    <form class="form" id="login-user-form">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="username" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-sm btn-primary">Log in</button>
                        </div>

                        <div class="form-group">
                           <h6>Not registered? <a href='/register'>Register here</a></h6>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

